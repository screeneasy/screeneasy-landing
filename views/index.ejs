<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Recruite.me - Coming Soon</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <!-- Custom font from Google Web Fonts -->
        <link href="//fonts.googleapis.com/css?family=Open+Sans:300" rel="stylesheet">

        <!-- Social font -->
        <link href="./stylesheets/social-font.css" rel="stylesheet">

        <!-- Template stylesheet -->
        <link href="./stylesheets/metronome.css" rel="stylesheet">
    </head>

    <body>
        <div class="container">
            <!-- Header -->
            <h1 class="header section">Recruit.me</h1>
            <!-- /Header -->

            <!-- Description -->
            <p class="description section">
               We are looking to remove the monotony from on-boarding technologists through automation and real insight into candidates.
            </p>
            <!-- /Description -->

            <!-- Subscription form -->
            <form class="subscription-form section red" id="subscription-form" novalidate>
                <input type="email" class="subscription-email" id="subscription-email" name="email" placeholder="Enter email to sign up for updates"><button class="subscription-submit" id="subscription-submit">Subscribe</button>
            </form>
            <!-- /Subscription form -->

            <!-- Countdown -->
            <div id="countdown" class="countdown section">
                <div class="countdown-item">
                    <div class="countdown-label">Days</div>
                    <div class="countdown-number red" id="countdown-days">
                        <div class="countdown-number-side countdown-number-back"></div>
                        <div class="countdown-number-side countdown-number-front"></div>
                    </div>
                </div>

                <div class="countdown-item">
                    <div class="countdown-label">Hours</div>
                    <div class="countdown-number yellow" id="countdown-hours">
                        <div class="countdown-number-side countdown-number-back"></div>
                        <div class="countdown-number-side countdown-number-front"></div>
                    </div>
                </div>

                <div class="countdown-item">
                    <div class="countdown-label">Minutes</div>
                    <div class="countdown-number blue" id="countdown-minutes">
                        <div class="countdown-number-side countdown-number-back"></div>
                        <div class="countdown-number-side countdown-number-front"></div>
                    </div>
                </div>

                <div class="countdown-item">
                    <div class="countdown-label">Seconds</div>
                    <div class="countdown-number green" id="countdown-seconds">
                        <div class="countdown-number-side countdown-number-back"></div>
                        <div class="countdown-number-side countdown-number-front"></div>
                    </div>
                </div>
            </div>
            <!-- /Countdown -->

            <!-- Social links -->
            <div class="social-links">
                <a href="http://www.twitter.com/screeneasyme" class="icon-twitter-alt blue"></a>
                <a href="http://github.com/screeneasy" class="icon-github-alt yellow"></a>
            </div>
            <!-- /Social links -->
        </div>

        <!-- Scripts -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="./javascripts/jquery-1.9.1.min.js"><\/script>')</script>
        <script src="./javascripts/jquery.countdown.js"></script>
        <script src="./javascripts/placeholders.min.js"></script>
        <script src="./javascripts/metronome.js"></script>
    </body>
</html>
